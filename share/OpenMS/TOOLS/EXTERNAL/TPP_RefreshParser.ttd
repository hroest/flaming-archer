<ttd>
	<tool status="external">
		<category>does not really matter</category>
		// multiple of these are allowed
		<type>TPP_RefreshParser</type>
		#name# -- for internal only
		// multiple of these allowed (same # as 'types') - for external only
		<external>
      <text>
        <onstartup>Tool started ...</onstartup>
        <onfail>Something went wrong. Is 'RefreshParser' in your PATH?</onfail>
        <onfinish>Tool finished successfully.</onfinish>
      </text>    
		  <e_category>FileConversion</e_category>
		  <cloptions>"%1" "%2"</cloptions>
		  <path>RefreshParser</path>
		  <mappings>
			<mapping id="1" cl="%%in" />
			<mapping id="2" cl="%%database" />
      <file_pre location="%TMP/%RND_%%in" target="in" />
			<file_post location="%%in" target="out" />
		  </mappings>
		  <ini_param>
			<ITEM name="in" value="" type="string" description="input file in RAW format(valid formats: &apos;RAW&apos;)" tags="input file,required" />
      <ITEM name="database" value="" type="string" description="FASTA database to find matching proteins." tags="input file,required" />
			<ITEM name="out" value="" type="string" description="output file in mzML format(valid formats: &apos;mzML&apos;)" tags="output file,required" />
		  </ini_param>
		</external>
	</tool>
</ttd>