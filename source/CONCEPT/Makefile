DIRECTORY=CONCEPT


CPP_SOURCES=\
	ClassTest.C\
	Constants.C\
	Exception.C\
	FactoryProduct.C\
	SingletonRegistry.C\
	ProgressLogger.C\
	TimeStamp.C\
	VersionInfo.C\
	FuzzyStringComparator.C

include ../common.mak
-include .Dependencies


# Even if .Dependencies are not yet created, we need this rule:
VersionInfo.C: ../../include/OpenMS/CONCEPT/revision.h

../../include/OpenMS/CONCEPT/revision.h: always
	@$(RM) -f ../../include/OpenMS/CONCEPT/revision.h;
	@$(ECHO) "// this file is automatically generated, do not edit" > ../../include/OpenMS/CONCEPT/revision.h
	@$(ECHO) "/// Revision number from revision control system, e.g. Subversion" >> ../../include/OpenMS/CONCEPT/revision.h
	@$(ECHO) "#define OPENMS_REVISION \""$(shell set LC_ALL=C; cd ../../; svnversion -n)"\"" >> ../../include/OpenMS/CONCEPT/revision.h
	@$(ECHO) "// end of file" >> ../../include/OpenMS/CONCEPT/revision.h
	@$(ECHO) "Note:   include/OpenMS/CONCEPT/revision.h  has been updated."

# Special note for Chris ;-)  The invocation of svnversion -n might be platform specific (?) ... then we can write something like this:
#	@if [ "$(OS)" = "MINGW32" ]; then $(shell xyz) ; else $(shell xyz ) ; fi;
# TODO: remove this comment when test build runs through.

always:

